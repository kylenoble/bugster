<div class="row">
  <div class="twelve columns">
    <div class="five columns offset-by-four">
      <h1>Requests</h1>
    </div>
  </div>
  <ul class="row tabs">
    <li class="three columns" id="tab1"><%= link_to 'All', requests_path, {:style=>'text-align:center; margin-top: 20px;'} %></li>
    <li class="three columns" id="tab2"><%= link_to 'Open Only', {:status => "open"}, {:style=>'text-align:center; margin-top: 20px;'} %></li>
    <li class="three columns" id="tab3"><%= link_to 'Completed Only', {:status => "completed"}, {:style=>'text-align:center; margin-top: 20px;'} %></li>
  </ul>
  <div class="twelve columns tab-content">
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Status</th>
          <th>Date Reported</th>
          <th>Category</th>
          <th colspan="2">Title</th>
          <th>Push Date</th>
          <th colspan="2">Email</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @requests.each do |request| %>
          <tr>
            <td><%= request.status %></td>
            <td><%= request.created_at  %></td>
            <td><%= request.category %></td>
            <td colspan="2"><%= request.title %></td>
            <td><%= request.push_date %></td>
            <td colspan="2"><%= request.email.split(',').first %></td>
            <td class="table-button"><%= link_to 'Show', request, {:style=>'text-align:center; margin-top:1rem; margin-left: -1rem;', :class => "button"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <br>
  <div class="two columns offset-by-five"><%= paginate @requests %></div>
  </div>
</div>

