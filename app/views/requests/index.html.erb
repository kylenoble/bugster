<div class="row">
  <div class="twelve columns">
    <div class="one columns">
      <%= link_to 'New request', new_request_path, {:style=>'text-align:center; margin-top:1rem;', :class => "button"} %>
    </div>
    <div class="two columns offset-by-four">
      <h1>Requests</h1>
    </div>
    <div class="one columns offset-by-four">
    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, :style=>'text-align:center; margin-top:1rem;', :class => "button", :method => :delete %>
    <% elsif admin_signed_in? %>
      <%= link_to "Sign out", destroy_admin_session_path, :style=>'text-align:center; margin-top:1rem;', :class => "button", :method => :delete %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, {:style=>'text-align:center; margin-top:1rem;', :class => "button"} %>
    <% end %>
    </div>
  </div>
  <div class="twelve columns">
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Status</th>
          <th>Date Reported</th>
          <th>Category</th>
          <th colspan="2">Title</th>
          <th>Push Date</th>
          <th colspan="2">Email</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @requests.each do |request| %>
          <tr>
            <td><%= request.status %></td>
            <td><%= request.created_at  %></td>
            <td><%= request.category %></td>
            <td colspan="2"><%= request.title %></td>
            <td><%= request.push_date %></td>
            <td colspan="2"><%= request.email %></td>
            <td class="table-button"><%= link_to 'Show', request, {:style=>'text-align:center; margin-top:1rem; margin-left: -1rem;', :class => "button"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <br>
  <div class="two columns offset-by-five"><%= paginate @requests %></div>
  </div>
</div>

