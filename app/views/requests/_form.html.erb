<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="six columns">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="six columns">
      <div class="field">
        <%= f.label :category %><br>
        <%= f.select(:category, options_for_select(["Email", "Chat", "Social", "SMS", "Admin"]), {}, { :class => 'u-full-width' } ) %>
      </div>
    </div>
  </div>
  <% if admin_signed_in? %>
  <div class="row">
    <div class="six columns">
      <div class="field">
        <%= f.label :status %><br>
        <%= f.select(:status, options_for_select(["Reported", "In Progress", "Testing", "Client Confirmation", "Completed"]), {}, { :class => 'u-full-width' } ) %>
      </div>
    </div>
    <div class="six columns">
      <%= f.label :push_date %><br>
      <%= f.date_field :push_date %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="twelve columns">
      <div class="field">
        <%= f.label :details %><br>
        <%= f.text_area :details %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <%= f.label :images %>
      <%= f.file_field :images, type: :file, multiple: true %>
    </div>
  </div>
  <%= f.hidden_field :user_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
