<%= form_for(@bug) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this ticket from being saved:</h2>
      <ul>
      <% @bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="six columns">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, :placeholder => "Enter Your Title" %>
      </div>
    </div>
    <div class="six columns offset by two">
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, :required => true, :placeholder => "Separate multiple email addresses with a ','", :class => 'search-field' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="six columns offset by two">
      <div class="field">
        <%= f.label :reporter %><br>
        <%= f.text_field :reporter, :required => true, :placeholder => "Enter Your Full Name" %>
      </div>
    </div>
    <div class="six columns">
      <div class="field">
        <%= f.label :priority %><br>
        <%= f.select(:priority, options_for_select(["Non-Service Impact", "Business Impact", "Severe Business Impact", "Outage"]), {}, { :class => 'u-full-width' } ) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="six columns offset by two">
      <div class="field">
        <%= f.label :org %><br>
        <%= f.text_field :org, :required => true, :placeholder => "Enter Your Org Number" %>
      </div>
    </div>
    <div class="six columns">
      <div class="field">
        <%= f.label :category %><br>
        <%= f.select(:category, options_for_select(["Email", "Chat", "Social", "SMS", "Admin"]), {}, { :class => 'u-full-width' } ) %>
      </div>
    </div>
  </div>
  <% if admin_signed_in? %>
  <div class="row">
    <div class="six columns offset by two">
      <div class="field">
        <%= f.label :bugster %><br>
        <%= f.text_field :bugster, :placeholder => "Name of Dev working on the issue" %>
      </div>
    </div>
    <div class="six columns">
      <div class="field">
        <%= f.label :status %><br>
        <%= f.select(:status, options_for_select(["Reported", "In Progress", "Testing", "Client Confirmation", "Completed"]), {}, { :class => 'u-full-width' } ) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= f.label :push_date %><br>
      <%= f.date_field :push_date %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="twelve columns">
      <%= f.label :images %>
      <%= f.file_field :images, type: :file, multiple: true %>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <div class="field">
        <%= f.label :details %><br>
        <%= f.text_area :details, :required => true %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit Ticket", class: 'bug-submit' %>
  </div>
<% end %>

